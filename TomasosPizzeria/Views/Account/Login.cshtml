@model LoginViewModel;

@{
    ViewBag.Title = "Logga in";
}

@section style{
    <link rel="stylesheet" href="~/css/NewCustomer.css" />
}

<div class="col-sm">
    <div id="newCustomerContainer">
        <h1>Logga In</h1>
        <form id="newCustomer" asp-controller="Account" asp-action="Login" method="post" class="d-flex flex-column align-items-center needs-validation" novalidate>
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="AnvandarNamn"></label>
                <input asp-for="AnvandarNamn" class="form-control @ViewBag.Validation" type="text" required/>
                <span asp-validation-for="AnvandarNamn"></span>
            </div>
            <div class="form-group">
                <label asp-for="Losenord"></label>
                <input asp-for="Losenord" class="form-control @ViewBag.Validation" type="password" required/>
                <span asp-validation-for="Losenord"></span>
            </div>
            <div id="saveBtnContainer">
                <button type="submit" class="btn btn-danger">Logga In</button>
            </div>
        </form>
    </div>
</div>
<script src="~/scripts/validation.js"></script>
