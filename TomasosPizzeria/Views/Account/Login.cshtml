@model LoginViewModel;

@{
    ViewBag.Title = "Ny Kund";
}

@section style{
    <link rel="stylesheet" href="~/css/NewCustomer.css" />
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<div class="col-sm">
    <div id="newCustomerContainer">
        <h1>Logga In</h1>
        <form id="newCustomer" asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="AnvandarNamn"></label>
                    <input asp-for="AnvandarNamn" class="form-control" type="text" />
                    <span asp-validation-for="AnvandarNamn"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Losenord"></label>
                    <input asp-for="Losenord" class="form-control" type="text" />
                    <span asp-validation-for="Losenord"></span>
                </div>
            <div id="saveBtnContainer">
                <button type="submit" class="btn btn-danger">Logga In</button>
            </div>
        </form>
    </div>
</div>
