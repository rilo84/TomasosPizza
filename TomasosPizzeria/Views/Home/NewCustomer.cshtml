@model TomasosPizzeria.Models.Kund

@{
    ViewBag.Title = "Ny Kund";
}

@section style{
    <link rel="stylesheet" href="~/css/NewCustomer.css" />
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <div id="newCustomerContainer">
        <h1>Öppna Konto</h1>
        <form id="newCustomer" asp-controller="Home" asp-action="NewCustomer" method="post">
            <div id="inputSection1">
                <label class="formItem" asp-for="Namn"></label>
                <input asp-for="Namn" class="formItem" type="text" />
                <span class="errorText" asp-validation-for="Namn"></span>

                <label class="formItem" asp-for="Gatuadress"></label>
                <input asp-for="Gatuadress" class="formItem" type="text" />
                <span class="errorText" asp-validation-for="Gatuadress"></span>

                <label class="formItem" asp-for="Postnr"></label>
                <input asp-for="Postnr" class="formItem" type="text" />
                <span class="errorText" asp-validation-for="Postnr"></span>

                <label class="formItem" asp-for="Postort"></label>
                <input asp-for="Postort" class="formItem" type="text" />
                <span class="errorText" asp-validation-for="Postort"></span>
            </div>
            <div id="inputSection2">
                <label class="formItem" asp-for="Email"></label>
                <input asp-for="Email" class="formItem" type="text" />
                <span class="errorText" asp-validation-for="Email"></span>

                <label class="formItem" asp-for="Telefon"></label>
                <input asp-for="Telefon" class="formItem" type="text" />
                <span class="errorText" asp-validation-for="Telefon"></span>

                <label class="formItem" asp-for="AnvandarNamn"></label>
                <input asp-for="AnvandarNamn" class="formItem" type="text" />
                <span class="errorText" asp-validation-for="AnvandarNamn"></span>

                <label class="formItem" asp-for="Losenord"></label>
                <input asp-for="Losenord" class="formItem" type="text" />
                <span class="errorText" asp-validation-for="Losenord"></span>
            </div>
            <div id="saveBtnContainer">
                <button type="submit" id="saveBtn">Registrera</button>
            </div>
            
        </form>
    </div>
